<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="pane" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CreateMenuController">
   <center>
      <VBox prefHeight="243.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <AnchorPane prefHeight="307.0" prefWidth="600.0">
               <children>
                  <TextField fx:id="inputText" layoutX="300.0" layoutY="87.0" promptText="Name" />
                  <Button layoutX="300.0" layoutY="126.0" mnemonicParsing="false" onAction="#cancelCreation" prefHeight="28.0" prefWidth="103.0" text="Cancel">
                     <padding>
                        <Insets left="2.0" />
                     </padding>
                  </Button>
                  <Button layoutX="192.0" layoutY="126.0" mnemonicParsing="false" onAction="#createCreation" prefHeight="28.0" prefWidth="100.0" text="Submit" />
                  <Label fx:id="errorLbl" prefHeight="17.0" prefWidth="192.0" text="  Error: Creation already exists" textFill="RED" visible="false" />
                  <Label layoutX="87.0" layoutY="92.0" text="Enter a name for your creation:" textAlignment="CENTER">
                     <padding>
                        <Insets left="5.0" />
                     </padding>
                  </Label>
               </children>
            </AnchorPane>
         </children>
      </VBox>
   </center>
</BorderPane>
